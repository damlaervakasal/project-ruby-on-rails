
  <%= turbo_frame_tag 'edit' do%>
 <% end %> 
  <div class="container mx-auto rounded-md">

      <% if flash[:notice] %>
        <div class=" px-4 py-2 mt-2">
          <%= flash[:notice] %>
        </div>
      <% end %>

    <h1 class="flex justify-center mb-2 font-extrabold text-white items-center bg-[#2563EB] h-16 rounded-md">Card Table</h1>
      <hr/>

    <div class="grid grid-cols-3 gap-4 bg-white">
        <div class="col-span-3 sm:col-span-1 ">
          <div class="flex justify-center font-extrabold text-white items-center h-8 bg-[#FACC15] rounded-md">TODO</div>
            <div id="todo">
              <%= render partial: 'cards/card', class:'bg-[#A5B4FC]', collection: @todo_card, as: :card, user: @user %>
            </div>
        </div>

        <div class="col-span-3 sm:col-span-1">
          <div class="flex justify-center font-extrabold text-white items-center h-8 bg-[#FACC15] rounded-md">UNDERWAY</div>
            <div id="underway">
              <%= render partial: 'cards/card', collection: @underway_card, as: :card, user: @user%>
            </div>
        </div>

        <div class="col-span-3 sm:col-span-1">
          <div class="flex justify-center font-extrabold text-white items-center h-8 bg-[#FACC15] rounded-md">DONE</div>
            <div id="done">
              <%= render partial: 'cards/card', collection: @done_card, as: :card, user: @user%>
            </div>
        </div>
    </div>

    <%= turbo_frame_tag 'popup' do %>
    <% end %>

    <%= link_to "New Card Add", new_card_path, class: 'mt-8 flex justify-center font-extrabold text-white items-center bg-[#2563EB] h-16 rounded-md w-full',
                data: { turbo_frame: :popup } %>

  </div>
  
