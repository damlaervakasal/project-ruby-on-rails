<div class="container mx-auto rounded-md ">
<h1 class="text-center bg-[#006666] h-12 rounded-md" >Card Table </h1>
<hr/>
  <div class="flex space-x-4 bg-white ">
    <% @cards.each do |card| %>
      <% if card.published? %>
          <div class="flex">
            <div class="flex-row space-x-4 w-80 h-40 bg-slate-400 rounded-lg shadow-sm">

            <a href="/cards/<%= card.id %>"> 
              <div class="font-bold underline decoration-[#006666] p-2 ">
                <%= card.title%>
                </div>

              <div class="ml-2">
              <%= card.body%>
                </div>
              </a>

              <div class="">
              <%= link_to "Edit", edit_card_path(card) %>
                </div>

              <div class="mb-4 "> Date:
              <%= card.created_at.strftime("%B %d, %Y at %H:%M") %>
                </div>

          </div>
            
        </div>
      <% end %>
    <% end %>
   </div>


<button class="h-12 bg-[#006666] rounded-md w-full" ><%= link_to "New Card Add", new_card_path %> </button>
</div>




