
<div class="container bg-[#ffffff] mt-2 rounded-md">
    <%= form_with model: [ @card, @card.comments.build ] do |form| %>
     <% if current_user %>
      <div class="w-full px-40 py-4 text-4xl font-bold">
        <%= current_user.name  %>
      </div>

      <div class="w-full px-40 py-4">
        <%= form.label :body, class:"text-2xl font-semibold"%><br>
        <%= form.text_area :body, class: 'w-full h-32 rounded-md text-black mt-2' %>
      </div>

      <div class="flex justify-start px-40">
        <%= link_to "Back", cards_path(@card), class: 'mt-8 w-48 h-12 mr-12 border rounded-md bg-[#2563EB] flex justify-center items-center font-bold text-white' %>
        <%= form.submit "Add", class:"col-span-3 mt-8 mr-4 w-48 h-12 border rounded-md bg-[#DDDDDD] flex justify-center items-center font-bold text-black cursor-pointer"%>
        
      </div>

    <% end %>
  <% end %>
</div>

